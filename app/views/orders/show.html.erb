<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1>Your Order</h1>
    <table class="table table-space">
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price Per Product</th>
      </tr>
      <%= @order.carted_products.each do |carted_product| %>
      <tr>
        <td><%= carted_product.product.name %></td>
        <td><%= carted_product.quantity %></td>
        <td><%= carted_product.product.price %></td>
      </tr>
      <% end %>
    </table>

    <ul>
      <li>Order Number <%= @order.id %></li>
      <li>Subtotal <%= @order.subtotal %></li>
      <li>tax <%= @order.tax %></li>
      <li>Total <%= @order.total %></li>
    </ul>
  </div>
</div>