<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@post.errors.count, "error")%> Prevented this post from saving</h2>
        <ul>
          <% @post.errors.full_messages.each do |message|%>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <p>
     <%= f.label :title %><br>
     <%= f.text_field :title, style: "width: 100%" %>  
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'ckeditor'%>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
</div>
</body>
</html>
