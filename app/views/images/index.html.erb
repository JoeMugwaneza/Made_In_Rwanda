<div class="container-fluid">
  
  <h1><%= @images.first.product.name %> Gallery</h1>

<div class="row">
  <% @images.each do |image| %>
    <div class="col-md-4">
      <img src="<%= image.url %>" style="width: 300px; height: 300px;">
      <div><%= link_to "Delete an Image", images_path, class: "btn btn-default", method: :delete, data: {confirm: "Are you sure?"} %></div><br>
    </div>
  <% end %>
</div>


  <p> <%= @images.first.product.description %></p>

  <%= form_tag "/images", method: :post do%>
<div>
  <input type="hidden" name="product_id" value="<%= @product_id %>">
</div>
<div>
  <input type="url" name="url"  style="width: 600px;" placeholder="Put image address (URL) here....">
</div>
<div>
  <input type="submit" value="Add Image">
</div>
<% end %>
</div>





