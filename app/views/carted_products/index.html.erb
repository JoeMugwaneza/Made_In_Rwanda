<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8">
<% if @carted_products.count == 0 %>
  <%= flash[:warning] = "Your Shoppting Cart is empty" %>
<% else %>
  <table>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Price Per Product</th>
      <th>Remove</th>
    </tr>
  <% @order.carted_products.each do |carted_product| %>
    <tr>
      <td><%= carted_product.product.name %></td>
      <td><%= carted_product.quantity %></td>
      <td><%= carted_product.product.price %></td>
      <td><%= link_to "Remove", "/carted_products/#{carted_product.id}", method: :delete %></td>
    </tr>
    <% end %>
  </table>
  <%= link_to "Buy now", "/orders/#{@order.id}", class: "btn btn-success", method: :patch %>
<% end %>
</div>
</div>