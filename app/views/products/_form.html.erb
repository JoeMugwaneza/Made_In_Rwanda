
  <div id="signupbox" style="margin: 0px 20px;">
    <div class="panel panel-info" style="padding: 20px;">
      <div class="panel-heading">
        <div class="panel-title text-center">Create a Product</div>
      </div>  
      <div class="panel-body" >
      <%= form_for @product do |f| %>

        <form id="signupform" class="form-horizontal" role="form">

          <div class="form-group">
            <label for="email" class="col-md-3 user-form-label control-label">Name</label>
            <div class="col-md-9">

              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label for="firstname" class="col-md-3 user-form-label control-label">Description</label>
            <div class="col-md-9">
            <%= f.text_area :description, class: "form-control"%>

            </div>
          </div>
          <div class="form-group">
            <label for="lastname" class="col-md-3 user-form-label control-label">Quantity</label>
            <div class="col-md-9">

            <%= f.number_field :quantity, style:"margin-top: 10px;" %>
            </div>
          </div>

          <div class="form-group">
            <label for="lastname" class="col-md-3 control-label">Price</label>
            <div class="col-md-9">

              <%= f.number_field :price, style:"margin-top: 10px;" %><br>

            </div>
          </div>
           
          <div class="col-md-12">
            
          <div class="form-group">

            <label for="icode" class="col-md-3 control-label">Choose Product Categories</label>

          <div class="col-md-9">

            <%= f.collection_check_boxes :category_ids, Category.order(:name), :id, :name, {}, {multiple: true, class: "chosen-select align-checkbox"}%>
          </div>

          <div>
            <%= f.hidden_field :seller_profile_id, value: "#{current_user.seller_profile.id}" %>
          </div>

          </div>
         </div>


        <div class="form-group">
          <!-- Button -->                                        
          <div class="col-md-offset-3 col-md-9">
          <input type="submit" name="" value="Create" class="btn btn-info" class="icon-hand-right" style="margin-top: 10px;">
          </div>
        </div>
      </form>
      <% end %>
    </div>
  </div>               
</div>