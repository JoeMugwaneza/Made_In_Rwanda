<h1>Update a Product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div>
    Name of a Product: <input type="text" name="name" value="<%= @product.name %>"> 
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Price: <input type="integer" name="price" value="<%= @product.price %>">
  </div>
  <div>
    <input type="submit" value="Update a Product">
  </div>
<% end %>