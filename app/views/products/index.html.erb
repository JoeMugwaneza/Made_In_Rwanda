<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <div class="container">
  <div class="row">

    <h1 style="text-align: center;"></h1>
      <% unless current_user%>
        <%= link_to "Sell with us!", "/seller_profiles/new", style: "float: right;", class: "btn btn-default" %>
      <% end %>
      <%# if current_user.admin %>
        <%#= button_to "Add New Product", "/products/new", style: "float: right;", class: "btn btn-primary", method: :get %>
      <%# end %>
      <% @products.each_slice(3) do |products| %>
        <div class="row">
          <% products.each do |product| %>
              <div class="col-md-4">
              <h4><%= link_to product.name, product %></h4>
              <img src="<%= product.image %>" class="img-responsive" style="width: 200px; height: 250px;">
              <p>by <%= product.seller_profile.company_name %></p>
              <!-- <p><b>Description</b>: <%= product.description %></p> -->
              <b>Price</b>: Rwf <%= product.price %>
            </div>
      <% end %>
        </div>
        
      <% end %>
    </div>
          <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
  </div>
</body>
</html>
