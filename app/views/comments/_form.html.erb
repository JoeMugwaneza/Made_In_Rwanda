<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, style: "width: 30%;"%>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, style: "width:30%; height:100px;"%>
  </p>
  <br>
  <p>
    <%= f.submit %>
  </p>
<% end %>