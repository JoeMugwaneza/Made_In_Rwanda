<h1><%= current_user.seller_profile.company_name %></h1>
<h1 style="text-align: center;"></h1>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
  <% if current_user.seller_profile%>
  <%= button_to "Add New Product", "/products/new", class: "btn btn-primary", method: :get %>
<% end %>
<table class="table-striped">
  <% @products.each_slice(3) do |products| %>
    <div class="row">
    <div class="item">
        <% products.each do |product| %>
          <div class="col-md-4">
            <h2><%= link_to product.name, product %></h2>
            <img src="<%= product.image_url %>" class="img-responsive" style="width: 200px; height: 250px;">
            <p><b>Description</b>: <%= product.description %></p>
            <data> <b>Price</b>: <%= product.price %></data>
          </div>
        <% end %>
      
    </div>
    </div>
  <% end %>
  