 <div class="container">
  <div class="row">
   <div class="col-md-6">

   
      <%= form_tag "/seller_profiles/#{current_user.seller_profile.id}", multipart: true, method: :patch do %>
      <form>
      <div id="fullscreen_bg" class="fullscreen_bg"/>
      <form class="form-signin"><br>
        <h1 class="form-signin-heading text-muted" style="text-align: center"><strong>Update your Profile</strong></h1>

        <h4>Company Name</h4><input type="name" class="form-control" name="company_name" value="<%= current_user.seller_profile.company_name %>">

        <h4>Company Email:</h4><input type="email" class="form-control" name="company_email" value="<%= current_user.seller_profile.company_email %>">

        <h4>Location</h4><input type="text" class="form-control" name="location" value="<%= current_user.seller_profile.location %>">

        <h4>Street Code</h4><input type="text" class="form-control" name="street_code" value="<%= current_user.seller_profile.street_code %>">

        <h4>Contact</h4><input type="text" class="form-control" name="contact" value="<%= current_user.seller_profile.contact %>">
        <div><br>
          <strong>Profile Picture:</strong> <br><input type="file" name="image" value="current_user.seller_profile.image">
        </div> <br>
         <button class="btn btn-lg btn-primary btn-block" type="submit">
          Update Profile
        </button>
      </form>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>