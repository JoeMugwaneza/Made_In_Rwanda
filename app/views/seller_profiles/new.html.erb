 <div class="container">
  <div class="row">
   <div class="col-md-6">

   
      <%= form_tag "/seller_profiles", method: :post, multipart: true do %>
      <form>
      <div id="fullscreen_bg" class="fullscreen_bg"/>
      <form class="form-signin"><br>
        <h1 class="form-signin-heading text-muted" style="text-align: center"><strong>Fill out this form to start selling your product.</strong></h1>
        <h4>Company Name</h4><input type="name" class="form-control" name="company_name" placeholder="Enter you shop name here..." required="" autofocus="">
        <h4>Company Email:</h4><input type="email" class="form-control" name="company_email" placeholder="Enter you email here..." required="" autofocus="">

        <h4>Location</h4><input type="text" class="form-control" name="location" placeholder="Enter your business place here..." required="" autofocus="">

        <h4>Street Code</h4><input type="text" class="form-control" name="street_code" placeholder="Enter your code here..eg.(KN 2 Ave)." required="" autofocus="">

        <h4>Contact</h4><input type="text" class="form-control" name="contact" placeholder="Add Your Phone number" required="" autofocus="">
        <div> <br>
       <strong>Profile Picture</strong> <br><input type="file" name="image" accept="image/*;capture=camera">
     </div> <br>
         <button class="btn btn-lg btn-primary btn-block" type="submit">
          Become a Seller
        </button>
      </form>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>