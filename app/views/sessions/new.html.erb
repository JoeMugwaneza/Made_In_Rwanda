<div class="container-fluid">
  <h1>Log In</h1>
  <%= form_tag "/login", method: :post do %>
   <div class="form-group">        
        <label><b>Email</b></label>
        <input style="width: 300px;" type="email" class="form-control" name="email">
    </div>
     <div class="form-group">
        <label><b>Password</b></label>
        <input  type="password"  class="form-control" style="width: 300px;" name="password">        
    </div>
  <div>
  <select name="role_id">
      <% UserCategory.all.each do |category| %>
        <option value="<%= category.id %>" <%= "selected='selected'" if category.user_type == "buyer" %> > <%= category.user_type %></option>
      <% end %>     
  </select>
    <input type="submit" value="Log in">
  </div>
  <% end %>
</div>
