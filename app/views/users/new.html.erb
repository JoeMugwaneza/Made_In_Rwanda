<div class="container-fluid">
  <h3>Sign up Form</h3>
    <%= form_tag "/users", method: :post do %>
        <div class="form-group">        
          <label style="font-size: 16px;"><b>User Name</b></label>
          <input style="width: 300px;" type="name" class="form-control" name="name" required>
        </div>
        
        <div class="form-group">
          <label style="font-size: 16px;"><b>Email</b></label>
          <input  type="email"  class="form-control" style="width: 300px;" name="email" required>        
        </div>

        <div class="form-group">
          <label style="font-size: 16px;"><b>Password</b></label>
          <input type="password" class="form-control" style="width: 300px;" name="password" required>        
        </div>

        <div class="form-group">
          <label style="font-size: 16px;"><b>Password Confirmation</b></label>
          <input type="password" class="form-control" name="password_confirmation" style="width: 300px;" required="">      
        </div>
        <input type="checkbox" checked="checked"> Remember Me
        
        <div class="clearfix">
          <input type="submit" value="Create an account">
          
          <p>Already have an account? <a href="/login"> login here</a></p>
        </div> 
      <% end %>
</div>
