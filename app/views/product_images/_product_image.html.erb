<div class="container-container">
  <%= link_to "Back to #{@product.name}", product_path(@product), class: 'btn btn-success' %>
<% if current_user && current_user.seller_profile && current_user.seller_profile.products.include?(@product) %>
  <%= link_to "Add Image", new_product_product_image_path(@product), class: 'btn btn-success' %>
<% end %>
  <h1><%= @product_images.first.product.name %> Gallery</h1>

<div class="row">
  <% @product_images.each do |product_image| %>
    <div class="col-md-4">
      <img src="<%= product_image.image_url %>" style="width: 300px; height: 300px;", class: "image_responsive">
      <% if current_user && current_user.seller_profile && current_user.seller_profile.products.include?(@product) %>
      <div><%= link_to "Delete Image", [product_image.product, product_image], class: "btn btn-default", method: :delete, data: {confirm: "Are you sure?"} %></div><br>
      <% end %>
    </div>
  <% end %>
</div>

